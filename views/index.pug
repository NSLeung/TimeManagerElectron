extends layout
block content
  .container
    .row
      .col.s4
        //a.btn-floating.btn-large.tooltipped.green.modal-trigger(href='#trackModal', data-tooltip='Begin Track')
        a.btn-floating.btn-large.tooltipped.green.modal-trigger.waves-effect(data-target='trackModal', data-tooltip='Begin Track')
          i.material-icons trending_up
      .col.s4
        a.btn-floating.btn-large.tooltipped.yellow.waves-effect(href='trackStats.html', data-tooltip='View Stats')
          i.material-icons assessment
      .col.s4
        a.btn-floating.btn-large.tooltipped.blue.waves-effect(href='/diet', data-tooltip='Diet')
          i.material-icons kitchen
  // Card when "track" button clicked
  #trackModal.modal.card
    .card.row
      .col.s12
        .card.blue-grey.darken-1
          .card-content.white-text
            span.card-title Track an Event
            // Location prompt
            form.col.s12(action='/events/add', method='post')
              .row
                .input-field.col.s12
                  i.material-icons.prefix add_location
                  input(type='text', name='location')
                  label Where you at?
            // Action prompt
            form.col.s12
              .row
                .input-field.col.s12
                  i.material-icons.prefix directions_run
                  select.icons
                    option(value='', disabled='', selected='') Whatcha Doin'?
                    option.left.circle(value='1', data-icon='../images/ic_library_books_black_24dp_1x.png') Studying
                    option.left.circle(value='2', data-icon='../images/office.jpg') Working out
                    option.left.circle(value='3', data-icon='../images/yuna.jpg') Doing Homework
            // Reminder Switch
            .row
              form.col.s12
                .row
                  .col.s12
                    label.cardLabel Reminder?
                    .reminder.switch.col.s12
                      i.material-icons.prefix add_alarm
                      label
                        | Off
                        input#reminderSwitch(type='checkbox')
                        span.lever
                        |                            On
            // Reminder time
            #reminderTime.row
              form.col.s12
                .row
                  .col.s12
                    label.cardLabel When?
                    input.timepicker(type='text', style='margin-bottom: 10px;')
            // end card content here
          .card-action
            .row 
              .col.s4
                button.btn.waves-effect.waves-light.modal-action(type='submit', name='action')
                  i.material-icons check
              .col.s4
                button.btn.waves-effect.waves-effect.modal-close.modal-action(type='submit', name='action')
                  i.material-icons archive
              .col.s4
                button.btn.waves-effect.waves-effect.modal-close.modal-action(type='submit', name='action')
                  i.material-icons cancel


  // Fixed Action Button stuff
  .fixed-action-btn
    a.btn-floating.btn-large.red
      i.large.material-icons.center mode_edit
    ul
      li
        a.btn-floating.red
          i.material-icons insert_chart
      li
        a.btn-floating.yellow.darken-1
          i.material-icons format_quote
      li
        a.btn-floating.green
          i.material-icons publish
      li
        a.btn-floating.blue
          i.material-icons attach_file
  
